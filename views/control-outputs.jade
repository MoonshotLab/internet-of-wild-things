extends layout

block head
  script(src='/page-control-outputs.js')

block content
  .container.main.page-control-outputs
    .row
      .col-sm-12
        ul.nav.nav-tabs
          li
            a(href='/core/#{core.coreId}/') Core Details
          li
            a(href="/core/#{core.coreId}/watch-inputs") Watch Inputs
          li.active
            a(href="/core/#{core.coreId}/control-outputs") Control Outputs
    .row
      .col-sm-12
        p Control your predefined digital and analog outputs. If you're not seeing any available outputs, please visit <a href="/core/#{core.coreId}/">Core Details page</a> to begin adding some.
    .row
      .col-sm-6
        h3 Digital Outputs
        ul.list-group#digital-outputs
          +digitalPin('D0')
      .col-sm-6
        h3 Analog Outputs
        ul.list-group#analog-outputs
          +analogPin('A0')

mixin digitalPin(pinId)
  li.list-group-item
    span
      strong= pinId
    .btn-group
      button.btn.btn-default.digital-pin(type='button', data-pinId="#{pinId}", data-pinVal="on") On
      button.btn.btn-default.digital-pin(type='button', data-pinId="#{pinId}", data-pinVal="off") Off

mixin analogPin(pinId)
  li.list-group-item
    .input-group
      input.form-control.analog-input(type='text', placeholder="#{pinId} value", data-pinId="#{pindId}")
      span.input-group-btn
        button.btn.btn-default.nalog-pin(type='submit') OK
